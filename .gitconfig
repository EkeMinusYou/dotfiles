[user]
  name = EkeMinusYou
  email = euonymuslke@gmail.com
[ghq]
  root = ~/src
  user = EkeMinusYou

[include]
  path = ~/.gitconfig-os
[includeIf "gitdir:~/src/github.com/global-mobility-service/"]
  path = ~/.gitconfig-gms

[core]
  editor = nvim
	ignorecase = false
[init]
  defaultBranch = main
[pull]
  rebase = false
[push]
  default = current
[rebase]
  autosquash = true

[pager]
  diff = delta
  log = delta
  reflog = delta
  show = delta

[delta]
  plus-style = "syntax #012800"
  minus-style = "syntax #340001"
  side-by-side = true
  navigate = true
  ; See: https://github.com/folke/tokyonight.nvim/blob/0fae425aaab04a5f97666bd431b96f2f19c36935/extras/delta/tokyonight_night.gitconfig
  minus-style                   = syntax "#37222c"
  minus-non-emph-style          = syntax "#37222c"
  minus-emph-style              = syntax "#713137"
  minus-empty-line-marker-style = syntax "#37222c"
  line-numbers-minus-style      = "#b2555b"
  plus-style                    = syntax "#20303b"
  plus-non-emph-style           = syntax "#20303b"
  plus-emph-style               = syntax "#2c5a66"
  plus-empty-line-marker-style  = syntax "#20303b"
  line-numbers-plus-style       = "#266d6a"
  line-numbers-zero-style       = "#3b4261"

[interactive]
  diffFilter = delta --color-only

[filter "lfs"]
  clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[branch]
	sort = -authordate

[url "git@github.com:"]
	insteadOf = https://github.com/
